FROM golang:1.24-alpine

WORKDIR /app

# Install git for go mod download and docker-cli for nginx reload
RUN apk add --no-cache git docker-cli

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 6081

# Run the application
CMD ["go", "run", "main.go"]