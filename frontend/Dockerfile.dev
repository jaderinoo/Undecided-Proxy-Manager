FROM node:20-slim

WORKDIR /app

# Enable corepack for yarn
RUN corepack enable

# Copy package files
COPY package.json ./

# Install dependencies
RUN yarn install

# Copy source code
COPY . .

# Expose port
EXPOSE 6071

# Start development server
CMD ["yarn", "dev", "--host", "0.0.0.0", "--port", "6071"]
