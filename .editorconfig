root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,ts,vue,json,scss,css,html}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab



